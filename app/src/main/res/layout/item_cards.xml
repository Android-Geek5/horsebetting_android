<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_200"
    app:dragEdge="right"
    app:mode="same_level">

    <FrameLayout
        android:id="@+id/delete_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/card_delete_ll"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_delete_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/margin_10"
                android:src="@drawable/ic_delete" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/front_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/card_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_190"
                    android:layout_margin="@dimen/margin_5"
                    android:elevation="@dimen/margin_5"
                    app:cardCornerRadius="@dimen/margin_10">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F7F7F7">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_15">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/item_card_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/card_type_string" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_5">

                                <TextView
                                    android:id="@+id/item_card_holder_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="@string/holder_name_dummy"
                                    android:textColor="@color/light_gray_color"
                                    android:textSize="@dimen/text_15" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/dummy_bank"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_10"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_25"
                                    android:src="@drawable/dummy_chip" />

                                <TextView
                                    android:id="@+id/item_card_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="@string/xxxx_xxxx_xxxx_0000_dummy"
                                    android:textColor="@color/light_gray_color"
                                    android:textSize="@dimen/text_13" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_15">

                                <TextView
                                    android:id="@+id/item_exp_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="@string/_05_19_dummy"
                                    android:textColor="@color/light_gray_color"
                                    android:textSize="@dimen/text_15" />

                                <TextView
                                    android:id="@+id/cvv_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/margin_30"
                                    android:layout_toRightOf="@+id/item_exp_date"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="@string/cvv_string"
                                    android:textColor="@color/light_gray_color"
                                    android:textSize="@dimen/text_15" />

                                <TextView
                                    android:id="@+id/cvv_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/margin_6"
                                    android:layout_toRightOf="@+id/cvv_tv"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="@string/xxx_dummy"
                                    android:textColor="@color/light_gray_color"
                                    android:textSize="@dimen/text_12" />

                                <ImageView
                                    android:id="@+id/card_type_img_tv"
                                    android:layout_width="@dimen/dimen_50"
                                    android:layout_height="@dimen/dimen_50"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/master_card" />
                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/card_selected_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/card_selected_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/card_unselected_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/uncheck"
                    android:visibility="gone" />
            </RelativeLayout>

        </RelativeLayout>
    </FrameLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>



