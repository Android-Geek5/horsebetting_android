<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".views.activities.AccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".28"
            android:scaleType="fitXY"
            android:src="@drawable/account_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".72" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".07"
            android:background="@color/splash_bg_color"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/detail_back_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1">

                    <ImageView
                        android:id="@+id/account_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_back" />
                </LinearLayout>


                <TextView
                    android:id="@+id/detail_title_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="left|center_vertical"
                    android:text="@string/gulfstream_park_string"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_16"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:gravity="right">


                    <ImageView
                        android:id="@+id/edit_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_3"
                        android:src="@drawable/edit"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/save_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_3"
                        android:src="@drawable/ic_tick"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".93">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/user_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_15"
                        android:elevation="@dimen/margin_10"
                        android:translationZ="@dimen/margin_5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_25"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/margin_15">

                            <RelativeLayout
                                android:layout_width="@dimen/dimen_90"
                                android:layout_height="@dimen/dimen_90">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/account_user_image"
                                    android:layout_width="@dimen/dimen_90"
                                    android:layout_height="@dimen/dimen_90"
                                    android:src="@drawable/img_horse" />

                                <LinearLayout
                                    android:id="@+id/upload_image_ll"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="@dimen/margin_5"
                                    android:background="@drawable/white_circle"
                                    android:padding="@dimen/margin_5">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_camera" />
                                </LinearLayout>
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/account_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="@string/user_name_dummy"
                                android:textColor="@color/user_name_balck_color"
                                android:textSize="@dimen/text_17" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_2"
                                android:fontFamily="@font/poppins"
                                android:text="@string/lorem_ipsum_is_dummy_text_dummy"
                                android:textColor="@color/user_name_balck_color"
                                android:textSize="@dimen/text_13"
                                android:visibility="gone" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:id="@+id/name_feild"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_profile"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_marginRight="@dimen/margin_15">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".35">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/full_name_string"
                                android:textColor="@color/blackTextColor"
                                android:textSize="@dimen/text_16" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".65"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/user_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@android:color/transparent"
                                android:enabled="false"
                                android:fontFamily="@font/poppins"
                                android:inputType="text"
                                android:maxLength="30"
                                android:paddingRight="5dp"
                                android:paddingBottom="@dimen/margin_5"
                                android:singleLine="true"
                                android:text="@string/arya_stark_dummy"
                                android:textColor="@color/light_gray_color"
                                android:textSize="@dimen/text_14" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_1"
                                android:background="@color/color_light_gray" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/email_feild"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name_feild"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_marginRight="@dimen/margin_15">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".35">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/email"
                                android:textColor="@color/blackTextColor"
                                android:textSize="@dimen/text_16" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".65"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/user_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@android:color/transparent"
                                android:enabled="false"
                                android:fontFamily="@font/poppins"
                                android:inputType="textWebEmailAddress"
                                android:maxLength="30"
                                android:paddingRight="@dimen/margin_5"
                                android:paddingBottom="@dimen/margin_5"
                                android:singleLine="true"
                                android:text="@string/aryastark_gmail_com_string"
                                android:textColor="@color/light_gray_color"
                                android:textSize="@dimen/text_14" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_1"
                                android:background="@color/color_light_gray" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email_feild"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_marginRight="@dimen/margin_15">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".35">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/dob"
                                android:textColor="@color/blackTextColor"
                                android:textSize="@dimen/text_16" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".65"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/user_dob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:paddingBottom="@dimen/margin_5"
                                android:text="@string/_22_05_1987_dummy"
                                android:textColor="@color/light_gray_color"
                                android:textSize="@dimen/text_14" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_1"
                                android:background="@color/text_color" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/logout_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/margin_30"
                        android:background="@drawable/button_bg"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingLeft="@dimen/margin_40"
                        android:paddingTop="@dimen/margin_6"
                        android:paddingRight="@dimen/margin_40"
                        android:paddingBottom="@dimen/margin_6"
                        android:text="@string/edit_string"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_16" />
                </RelativeLayout>
            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>