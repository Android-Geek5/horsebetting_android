<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".views.activities.signUpFlow.ForgotPasswordActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/forgot_main_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_175"
                android:background="@drawable/img_login_signup">
                <ImageView
                    android:id="@+id/forgot_password_img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_back"
                    android:layout_margin="@dimen/margin_10"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    app:fontFamily="@font/poppins_semibold"
                    android:text="@string/forgot_your_password_txt"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/text_16"
                    android:layout_marginTop="@dimen/margin_10"/>
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin_5">
                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/reset_password_str"
                            android:textColor="@color/hintColor"
                            android:textSize="@dimen/text_13"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/poppins"/>
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edit_text"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:paddingLeft="@dimen/margin_15">
                        <ImageView android:layout_width="@dimen/margin_20"
                            android:layout_height="@dimen/margin_20"
                            android:src="@drawable/icon_email"/>
                        <EditText
                            android:id="@+id/forgot_password_et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:hint="@string/email"
                            android:textColorHint="@color/hintColor"
                            android:textSize="@dimen/text_13"
                            android:gravity="center_vertical"
                            android:inputType="textEmailAddress"
                            android:maxLength="50"
                            android:paddingLeft="@dimen/margin_10"
                            android:fontFamily="@font/poppins"
                            android:backgroundTint="@android:color/transparent"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_30">
                    <Button android:id="@+id/forgot_password_btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_login_btn"
                        android:text="@string/submit"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_16"
                        android:textAllCaps="false"
                        android:translationZ="@dimen/margin_5"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>