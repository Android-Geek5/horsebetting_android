<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.activities.InviteFriendsActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".07"
        android:background="@color/splash_bg_color"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1">

                <ImageView
                    android:id="@+id/invite_back_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_back" />
            </LinearLayout>


            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="left|center_vertical"
                android:text="Invite Friends"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_16" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:gravity="right">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/delete_bg"
                    android:fontFamily="@font/poppins"
                    android:paddingLeft="@dimen/margin_17"
                    android:paddingTop="@dimen/margin_1"
                    android:paddingRight="@dimen/margin_17"
                    android:paddingBottom="@dimen/margin_1"
                    android:text="@string/delete_string"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_12"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".93"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".53"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Share Thrilling Picks"
                android:textAlignment="center"
                android:textColor="@color/tabSelectedColor"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/invite_heading_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_light"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Give your friends 5% off with  your promocode. You'll get 15% in creadits, after they subscribe to a monthly plan"
                android:textAlignment="center"
                android:textColor="@color/light_gray_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/promo_code_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_light"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Your invite code: XXXXXXX"
                android:textAlignment="center"
                android:textColor="@color/light_gray_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/invite_friends_now_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30"
                android:background="@drawable/rectangle_btn"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="@dimen/margin_10"
                android:paddingTop="@dimen/margin_7"
                android:paddingRight="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_7"
                android:text="Invite Friends Now"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_16" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".25"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <View
                android:id="@+id/line_1"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/tabSelectedColor" />

            <LinearLayout
                android:id="@+id/accepted_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_1"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".85">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Invites Accepted"
                        android:textColor="@color/light_gray_color"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".15"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/number_of_accepted_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/light_gray_color"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/subscribed_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/accepted_ll"
                android:layout_marginBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".85">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friends who've subscribed"
                        android:textColor="@color/light_gray_color"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".15"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/friends_who_subscribed_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/light_gray_color"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_below="@+id/subscribed_ll"
                android:background="@color/tabSelectedColor" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".15"
            android:gravity="center">

            <TextView
                android:id="@+id/invite_friends_back_btn_tv"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                android:fontFamily="@font/poppins_medium"
                android:paddingTop="@dimen/margin_7"
                android:paddingBottom="@dimen/margin_7"
                android:text="Back"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_16" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>